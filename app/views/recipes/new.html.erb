<div class="new-recipe-container">
  <h1>New Recipe</h1>

  <div class=form-container>
    <%= form_with(model: [@user, @recipe], url: user_recipes_path(current_user)) do |form| %>
      <table>
        <tr>
          <td style="width: 20%;"><%= form.label :name, class: "label" %></td>
          <td style="width: 80%;"><%= form.text_field :name, class: "name-field" %></td>
        </tr>
        <tr>
          <td style="width: 20%;"><%= form.label :preparation_time, class: "label" %></td>
          <td><%= form.text_field :preparation_time, class: "number-field" %></td>
        </tr>
        <tr class="number">
          <td style="width: 20%;"><%= form.label :cooking_time, class: "label" %></td>
          <td><%= form.text_field :cooking_time, class: "number-field" %></td>
        </tr>
        <tr>
          <td style="width: 20%;"><%= form.label :description, class: "label" %></td>
          <td><%= form.text_area :description, class: "text-field", height: "25px" %></td>
        </tr>
        <tr>
          <td style="width: 20%;"><%= form.label :public, class: "label" %></td>
          <td><%= form.text_field :public, class: "public-field" %></td>
        </tr>
      </table>
      <div>
        <%= form.submit "Create Recipe", class: "submit-btn" %>
      </div>
    <% end %>
  </div>
</div>
