<%= render partial: 'shared/menu' %>
<div class="shopping-list-container"></div>
<h1>Shopping List</h1>
<div class="section1">
  <table class="table1">
    <tr>
      <td style="width: 40%">
        Amount of food to buy: <%= @total_food_to_buy %>
      </td>
      <td style="width: 40%">
        Total value of food needed: <%= @total_value_of_food_needed %>
      </td>
    </tr>
  </table>
</div>

<div class="section2">
  <% if @missing_food_items && @missing_food_items.any? %>
    <table class="table2">
      <tr>
        <th style="width: 20%">Food</th>
        <th style="width: 20%">Quantity</th>
        <th style="width: 20%">Price</th>
      </tr>
      <% @missing_food_items.each do |missingfood| %>
        <tr>
          <td><%= missingfood.name %></td>
          <td><%= missingfood.quantity %></td>
          <td>$<%= missingfood.price %></td>
        </tr>
      <% end %>
    </table>
  <% else %>
    <div class="alert alert-info" style="margin-left: 8%;" role="alert">No missing food items.</div>
  <% end %>
</div>
