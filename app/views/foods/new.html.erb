<div class=new-container>
  <h1>New Food</h1>
  <%= form_with(model: [@user, @food], url: user_foods_path(@user)) do |form| %>
    <table>
      <tr>
        <td style="width: 20%;"><%= form.label :name, class: "label" %></td>
        <td style="width: 80%;"><%= form.text_field :name, class: "name-field" %></td>
      </tr>
      <tr>
        <td><%= form.label :measurement_unit, class: "label" %></td>
        <td><%= form.text_field :measurement_unit, class: "text-field" %></td>
      </tr>
      <tr>
        <td><%= form.label :price, class: "label" %></td>
        <td><%= form.text_field :price, class: "number-field" %></td>
      </tr>
      <tr>
        <td><%= form.label :quantity, class: "label" %></td>
        <td><%= form.text_field :quantity, class: "number-field" %></td>
      </tr>
    </table>
    <div>
      <%= form.submit "Create Food", class: "submit-btn" %>
    </div>
  <% end %>
</div>
